<% if topic.content.present? && (!meta_description? || !meta_keywords?) %>
  <% content = strip_textile(topic.content, :object => topic, :project => topic.project, :attachments => topic.attachments) %>
  <% meta_description(truncate_description(content)) unless meta_description? %>
  <% meta_keywords(extract_keywords(content)) unless meta_keywords? %>
<% end %>

<% settings = Setting.plugin_meta %>

<% unless settings[:facebook_admins].blank? %>
  <% content_for(:header_tags) do %>
    <meta property="fb:admins" content="<%= h settings[:facebook_admins] %>" />
  <% end %>
<% end %>

<% unless settings[:facebook_app].blank? %>
  <% content_for(:header_tags) do %>
    <meta property="fb:app_id" content="<%= h settings[:facebook_app] %>" />
  <% end %>
<% end %>

<% if settings[:open_graph] %>
  <% content_for(:header_tags) do %>
    <meta property="og:type" content="article" />
    <meta property="og:title" content="<%= h topic.board.name %>: <%= h topic.subject %>" />
    <% if meta_description? %>
      <meta property="og:description" content="<%= h meta_description %>" />
    <% end %>
    <meta property="article:author" content="<%= h url_for(:controller => 'users', :action => 'show', :id => topic.author, :only_path => false) %>" />
    <% meta_images do |image| %>
      <meta property="og:image" content="<%= h image %>" />
    <% end %>
    <meta property="article:published_time" content="<%= topic.created_on.strftime('%Y-%m-%dT%H:%M') %>" />
    <meta property="article:modified_time" content="<%= topic.updated_on.strftime('%Y-%m-%dT%H:%M') %>" />
    <meta property="og:url" content="<%= h url_for(:controller => 'messages', :action => 'show', :board_id => topic.board, :id => topic, :only_path => false) %>" />
    <% unless settings[:open_graph_site].blank? %>
      <meta property="og:site_name" content="<%= h settings[:open_graph_site] %>" />
    <% end %>
  <% end %>
<% end %>

<% if settings[:twitter_cards] %>
  <% content_for(:header_tags) do %>
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="<%= h topic.board.name %>: <%= h topic.subject %>" />
    <% if meta_description? %>
      <meta name="twitter:description" content="<%= h truncate_description(meta_description, 200) %>" />
    <% end %>
    <% catch :done do %>
      <% meta_images do |image| %>
        <meta name="twitter:image" content="<%= h image %>" />
        <% throw :done %>
      <% end %>
    <% end %>
    <meta name="twitter:url" content="<%= h url_for(:controller => 'messages', :action => 'show', :board_id => topic.board, :id => topic, :only_path => false) %>" />
    <% project_twitter = project_twitter(topic.project) %>
    <% unless project_twitter.blank? %>
      <meta name="twitter:site" content="<%= h project_twitter %>" />
    <% end %>
    <% if settings[:twitter_user_custom_field] %>
      <% custom_value = topic.author.custom_value_for(settings[:twitter_user_custom_field]) %>
      <% if custom_value && custom_value.value.present? %>
        <meta name="twitter:creator" content="<%= h twitter_username(custom_value.value) %>" />
      <% end %>
    <% end %>
  <% end %>
<% end %>
